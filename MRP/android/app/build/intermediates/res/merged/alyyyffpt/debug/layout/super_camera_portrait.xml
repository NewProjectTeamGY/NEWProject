<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.authreal.ui.CameraPortraitActivity">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/super_real_nav_bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="16dp"
            android:paddingRight="24dp"
            android:src="@drawable/super_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/super_app_title"
            android:textColor="@color/super_real_nav_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#fff"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#24b482"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8a8a8a"/>
        
        <ImageButton
            android:id="@+id/supper_back"
            android:onClick="btnOnclick"
            android:background="@android:color/transparent"
            android:src="@drawable/super_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:id="@+id/lyt_bottom"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/img_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tip_"
                android:layout_marginTop="20dp"
                android:text="@string/super_ptoto_front"
                android:textColor="#383434"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/tip_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#383434"
                android:layout_marginTop="10dp"
                android:text="请将身份证对齐边框"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/takepicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:onClick="btnOnclick"
                android:background="@android:color/transparent"
                android:src="@drawable/hand_take_came"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/ok_takepicture"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:onClick="btnOnclick"
                android:background="@drawable/super_camera_ok"
                android:text=""
                android:visibility="invisible"
                android:clickable="true"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ud_bule"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/re_takepicture"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:onClick="btnOnclick"
                android:background="@drawable/super_camera_cancel"
                android:text=""
                android:visibility="invisible"
                android:clickable="true"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textColor="@color/ud_bule"
                />

        </RelativeLayout>

        <TextView
            android:layout_marginBottom="70dp"
            android:text="轻触聚焦"
            android:textSize="10dp"
            android:layout_margin="10dp"
            android:textColor="#77e5e5f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lyt_bottom"/>

    </RelativeLayout>



</LinearLayout>
